page{
  background:#FFFAD0;
}
.container{
  padding: 0;
}

.text-center{
    text-align: center;
    display: flex;
    justify-content: center;
    flex-direction: column;
}

form{
    width:600rpx;
    text-align: center;
    margin: 0 auto;
}

input{
    border:1px solid #F9CE00;
    height:96rpx;
    line-height: 96rpx;
    text-align: left;
    box-sizing: border-box;
    padding-left: 114rpx;
    margin-top:32rpx;
    font-size: 31rpx;
}

.login-btn{
    border:none;
    width: 209rpx;
    font-size: 31rpx;
    padding: 0;
    display: inline-block;
    background:#FFFAD0;
}

.login-btn:after{
  border:none;
}

.btn-area button{
    display: block;
    width: 100%;
    height: 84rpx;
    margin-top: 60rpx;
    border-radius: 45rpx;
    background:#7dc383;
    color: #fff;
    cursor: pointer;
    text-align: center;
    font-size: 37rpx;
    line-height: 84rpx;
}

.btn-area navigator{
  color: #999;
  font-size: 24rpx;
  margin-top: 30rpx;
}

.section{
  position: relative
}
.section image{
  width:61rpx;
  height:61rpx;
  position: absolute;
  left:20rpx;
  top:18rpx;
}
.section button{
  position:absolute;
  right:-1rpx;
  top:0;
  background:transparent;
  font-size:27rpx;
  color:#00587A;
  padding-top:14rpx;
  z-index:99;
  border-left:1px dotted #F9CE00;
  height:96rpx;
}
.section button:after{
  border:none;
}
.login-text{
  color: #999;
  font-size: 26rpx;
  line-height: 40rpx;
  text-align: left;
  flex-direction: row;
  margin-top: 32rpx;
}
.login-text navigator{
  color: #2395ff;
  display: inline-block
}

.activ{
  position: relative;
  color: #FF6107;
}
.activ:after{
  position:absolute;
  width:272rpx;
  height:10rpx;
  background-color:#FF6107;
  left:43rpx;
  display:block;
  content:'';
  top:63rpx;
}
.hide{
  display: none
}
.block{
  position: absolute;
  display: block;
  right: 0;
  top: 15rpx;
  z-index: 99
}